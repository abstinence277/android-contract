<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@mipmap/picture"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="#333333"
                    android:gravity="center"
                    android:text="合同管理"
                    android:textSize="20sp"
                    android:textColor="#ffffff" />


                <EditText
                    android:id="@+id/in"
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:hint="输入查询的内容"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/find"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="#003300"
                    android:text="查询"
                    android:textColor="#ffffff"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/id"
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="作业合同备案编号："
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/contract_name"
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="作业合同名称："
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/settime"
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="防治时间："
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/id2"
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="防治项目备案编号："
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/jia"
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="甲方（采购单位）："
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/yi"
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="乙方（防治ID号）："
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/medcine_name"
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="使用药剂名称："
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/medcine"
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="使用药剂描述："
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/planename"
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="作业飞机名称："
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/S"
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="作业总面积（亩）："
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/fee"
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="费用："
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/province"
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="省名称："
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/shi"
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="市名称："
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/xian"
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="县名称："
                    android:textSize="12sp" />

            </LinearLayout>



            <Button
                android:id="@+id/change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#003300"
                android:text="修改"
                android:textSize="17sp"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>